{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "QA with Citations Response",
  "required": ["answer", "citations", "confidence"],
  "properties": {
    "answer": {
      "type": "string",
      "description": "The main answer to the question",
      "minLength": 10,
      "maxLength": 1000
    },
    "citations": {
      "type": "array",
      "description": "Array of citation references",
      "items": {
        "type": "object",
        "required": ["chunk_id", "relevance"],
        "properties": {
          "chunk_id": {
            "type": "string",
            "description": "Reference to source chunk (e.g., policy_2024_07#p12)"
          },
          "relevance": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Relevance score of this citation to the answer"
          },
          "excerpt": {
            "type": "string",
            "description": "Brief excerpt from the source",
            "maxLength": 200
          }
        }
      },
      "minItems": 0,
      "maxItems": 10
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence score for the answer based on available evidence"
    },
    "reasoning": {
      "type": "string",
      "description": "Brief explanation of the reasoning process",
      "maxLength": 300
    },
    "flags": {
      "type": "array",
      "description": "Any warning flags about the answer",
      "items": {
        "type": "string",
        "enum": ["insufficient_evidence", "conflicting_sources", "outdated_info", "partial_answer"]
      }
    },
    "related_questions": {
      "type": "array",
      "description": "Suggested related questions",
      "items": {
        "type": "string"
      },
      "maxItems": 3
    }
  }
}
